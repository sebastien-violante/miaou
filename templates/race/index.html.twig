{% extends 'base.html.twig' %}

{% block title %}Liste races{% endblock %}

{% block body %}
    <section class="crud">
        <h1>Liste des races</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for race in races %}
                <tr>
                    <td>{{ race.id }}</td>
                    <td>{{ race.nom }}</td>
                    <td>
                        <a href="{{ path('race_show', {'id': race.id}) }}">show</a>
                        <a href="{{ path('race_edit', {'id': race.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('race_new') }}">Create new</a>
    </section>
{% endblock %}
